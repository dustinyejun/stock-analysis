# 环境配置示例文件
# 复制此文件为 .env 并根据需要修改配置

# 应用环境 (development/production)
ENVIRONMENT=development

# 调试模式
DEBUG=true

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 数据源配置
PRIMARY_DATA_SOURCE=akshare
BACKUP_DATA_SOURCE=yfinance

# 请求配置
REQUEST_TIMEOUT=30
REQUEST_DELAY=0.5
MAX_RETRY_TIMES=3

# 选股策略参数
# 黄金坑策略
GOLDEN_PIT_DECLINE_THRESHOLD=-0.20
GOLDEN_PIT_VOLUME_RATIO=1.5
GOLDEN_PIT_BIG_YANG_THRESHOLD=0.05

# 趋势突破策略
TREND_BREAKOUT_YANG_THRESHOLD=0.03
TREND_BREAKOUT_VOLUME_RATIO=1.3
TREND_BREAKOUT_CONSECUTIVE_DAYS=2